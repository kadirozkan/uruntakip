
@{
    ViewBag.Title = "yeniteklif";
    Layout = "~/Views/Shared/main.cshtml";
}



<div class="" id="1">
    <div class="modal-dialog" style="padding-right:600px">
        <div class="modal-content" style="width:600px">
            <div class="modal-header" style="text-align:center">
                <div>
                    <span class="" style="color:#fc6c05;font-size:16px"><b> Teklif Bilgileri  </b></span>
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="input-group" style="width:300px">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Teklif Tarihi</b></span>

                            <b><input type="date" name="tarih" id="tarih" autocomplete="off" class="form-control" required="" /></b>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group" style="width:300px">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Teklif Numarası</b></span>

                            <b><input type="text" name="teklifno" id="teklifno" autocomplete="off" class="form-control" required="" /></b>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group" style="width:300px">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Teklif Notu</b></span>

                            <b><input type="text" name="teklifnot" id="teklifnot" autocomplete="off" class="form-control" required="" /></b>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group" style="width:300px">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Sevkiyat Tipi</b></span>
                            <fieldset>
                                <select id="sevkiyattip" name="sevkiyattip" class="form-control" style="font-weight:bold">
                                    @{
                                        foreach (var item in ViewBag.sevkiyat)
                                        {
                                            <option value="@item.sevkiyatID">@item.sevkiyatadi</option>
                                        }
                                    }
                                </select>
                            </fieldset>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group" style="width:300px">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Teslimat Tipi</b></span>
                            <fieldset>
                                <select id="teslimattip" name="teslimattip" class="form-control" style="font-weight:bold">
                                </select>
                            </fieldset>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Açıklama</b></span>

                            <textarea style="height:150px" class="form-control" name="acıklama" id="acıklama"></textarea>
                        </div>
                    </div>

                </form>

                <div style="float:right">
                    <button id="form1" class="btn btn-info" value="1">İleri</button>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="" id="2" style="display:none">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="text-align:center">
                <div>
                    <span class="" style="color:#fc6c05;font-size:16px"><b> Diğer Bilgileri  </b></span>
                </div>
                <h3 id="_teklifno2" style="display:none"></h3>
            </div>
            <div class="modal-body">
                <form id="Registration">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Makina No</b></span>

                            <select id="makina" name="makina" class="form-control" style="width:150px;font-weight:bold">
                                <option selected>Makina Seç</option>
                                @{
                                    foreach (var item in ViewBag.makina)
                                    {
                                        <option value="@item.makinaid">@item.serino</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Arıza No</b></span>

                            <select id="ariza" name="ariza" class="form-control" style="width:150px;font-weight:bold">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Genel iskonto</b></span>

                            <b><input type="text" name="iskonto" id="iskonto" autocomplete="off" class="form-control" value="0" required="" style="width:150px" /></b>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:128px;color:#fc6c05"><b>Para Birimi</b></span>

                            <select id="birim" name="birim" class="form-control" style="width:150px;font-weight:bold">

                                @{
                                    foreach (var item in ViewBag.para)
                                    {
                                        <option value="@item.paraid">@item.parabirimi</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                </form>

                <div style="float:right">
                    @*<button class="btn btn-danger" onclick="geri(2)">Geri</button>*@ <button id="form2" value="2" class="btn btn-info">İleri</button>
                </div>
            </div>

        </div>
    </div>
</div>
