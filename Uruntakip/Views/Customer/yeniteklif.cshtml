<script>
    function geri(id) {
        var a = parseInt(id) - 1;
        document.getElementById(id).style.display = "none";
        document.getElementById(a).style.display = "";
    }

    function ileri(id) {
        var a = parseInt(id) + 1;
        document.getElementById(id).style.display = "none";
        document.getElementById(a).style.display = "";
